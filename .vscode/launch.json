{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Reaper",
            "type": "cppdbg",
            "request": "launch",
            "program": "/usr/bin/reaper",
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "type": "lldb-mi",
            "request": "launch",
            "name": "Windows LLDB",
            "target": "C:/Program Files/REAPER (x64)/reaper.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Windows - Reaper - GDB",
            "target": "C:\\Program Files\\REAPER (x64)/reaper.exe",
            "cwd": "${workspaceRoot}"
        },
        {
            "name": "Lanuch Audacity",
            "type": "gdb",
            "request": "launch",
            "target": "/usr/bin/audacity",
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "gdb",
            "request": "launch",
            "name": "Launch Program",
            "target": "/usr/bin/reaper",
            "cwd": "${workspaceRoot}",
            "valuesFormatting": "parseText"
        },
    ]
}
